// This is the template used to create an
//
// appsettings.{env}.INSECURE.json file  specific 
// to an Environment.
// It is NOT checked in (for security reasons), and 
// the reasons that devs that check out the code for 
// the first time have to recreate it from 
// this template file.
//
// IMPORTANT:
// filled and empty values ("") in appsettings.{env}.INSECURE.json
// override values already read from appsettings.{env}.json
// If you do not want to override an existing value, 
// comment it out here.
{


  "app": {
    "modules": {
      "core": {
        // -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
        "AzureEnvironment": {
          // TODO: in an *.INSECURE.json (obviously not a KV...), provide the name of the KV within the above ResourceGroup.
          // The KV used to retrieve Configuration variables (see Program.cs).
          // May not necessarily be in same resource group as app service.
          "DefaultKVResourceName": "",
          // -------------------------
          // TODO: in an *.INSECURE.json (or KV), Provide Azure SubscriptionId.
          "SubscriptionId": "",
          // TODO: in an *.INSECURE.json (or KV), Provide the Id of the AAD tenant managing the above subscription.
          "TenantId": "",
          // TODO: in an *.INSECURE.json (or KV), provide the target environment ResourceGroup.
          "ResourceGroupName": "",
          // TODO: in an *.INSECURE.json (or KV), provide the default name of resources within the above ResourceGroup.
          // If not set will be lowercase of ResourceGroupName, after dashes removed.
          "DefaultResourceName": "",
          // TODO: in an *.INSECURE.json (or KV), provide the App Insights Client Id/Key.
          "AppInsightsClientIdentifier": "",
          // TODO: in an *.INSECURE.json (or KV), provide the StorageAccount resource name used to persist diagnostics messages.
          // Required diagnostics trace messages are output to a storage account:
          "DiagnosticsStorageAccountResourceName": ""
        },
        // -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
        // Configuration for Redis Cache based Distributed Cache Service 
        // required for horizontal scalability
        "DistributedCacheServiceConfiguration": {
          // TODO:  in an *.INSECURE.json (or KV), provide the Redis Server ConnectionString, minus the password.",
          "ClientSecret": "TODO: The password to the remote Redis service."
        },
        // -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
        // Configure for IpStack
        "GeoLocationServiceConfiguration": {
          // 
          "ClientIdentifier": "",
          // TODO:  in an *.INSECURE.json (or KV), provide the ipstack.com client key
          "ClientSecret": ""
        },
        // -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
        // Configuration to validate updated media:
        "MediaMalwareDetectionServiceConfiguration": {
          // TODO:  in an *.INSECURE.json (or KV), provide the scanii.com client id
          "ClientIdentifier": "",
          // TODO:  in an *.INSECURE.json (or KV), provide the scanii.com client secret
          "ClientSecret": "",
          // Not needed at present:
          "MiscConfig": ""
        },
        // -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
        // Configuration for SMTP service needed
        // to send email notifications
        // For Examples, using a GMail/Google Apps account, 
        // use "smtp.gmail.com", 587, "support@myorg.com", "avaliduser@myorg.com"
        // And for the ClientSecret, navigate to
        // https://myaccount.google.com/security 
        // then, as per https://support.google.com/accounts/answer/185833, 
        // select Security, and Generate a new app account + password.
        // (If you don't, and you have 2FA, you'll get a 5
        "SmtpServiceConfiguration": {
          // TODO: In an *.INSECURE.JSON file, provide the base Uri (eg: smtp.gmail.com)
          "BaseUri": "",
          // TODO: In an *.INSECURE.JSON file, provide the port (eg: 587)
          "Port": "",
          // TODO: In an *.INSECURE.JSON file, provide eg: support.myapp@myorg.com
          "From": "",
          // leave empty
          "MiscConfig": "",
          // TODO: In an *.INSECURE.JSON file, provide eg: myaccount@myorg.com
          "ClientIdentifier": "",
          // TODO: In an *.INSECURE.JSON file, provide a password
          // As per https://support.google.com/accounts/answer/185833, 
          // Navigate to https://myaccount.google.com/security 
          // To generate a custom App password
          "ClientSecret": ""
        }
        // -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
      }
    }
  }
}
